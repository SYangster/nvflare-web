<script is:inline>
  function toggleTutorials(extra_content, button_name) {
    const extraTutorials = document.querySelectorAll(extra_content);
    const buttonText = document.querySelector(button_name);
    extraTutorials.forEach((tut) => {
      tut.classList.toggle("hidden");
    });
    buttonText.classList.toggle("hidden");
  }
</script>