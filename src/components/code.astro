---
// Import Prism to enable syntax highlighting
import Prism from "prismjs";
import "prismjs/components/prism-python.js";
// Directly import Prism CSS
import "prismjs/themes/prism.css";

const clientCode = `
# Example Python function to calculate factorial
def factorial(n):
    if n == 0:
        return 1
    else:
        return n * factorial(n-1)

# Test the function
print(factorial(5))
`;

const serverCode = `
# Python function to reverse a string
def reverse_string(s):
    return s[::-1]

# Sample usage
sample_string = "Hello, world!"
print(reverse_string(sample_string))
`;

const configCode = `
{
  "id": 1,
  "name": "Lorem Ipsum",
  "status": "Active",
  "tags": ["ex", "et", "tempor"]
}
`;

const highlightedClientCode = Prism.highlight(
  clientCode,
  Prism.languages.python,
  "python"
);
const highlightedServerCode = Prism.highlight(
  serverCode,
  Prism.languages.python,
  "python"
);
const highlightedConfigCode = Prism.highlight(
  configCode,
  Prism.languages.python,
  "python"
);
---

