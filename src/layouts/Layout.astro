---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import "@fontsource-variable/inter/index.css";
import 'blaze-slider/dist/blaze.css'
// import "prismjs/themes/prism.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title ? title + " | " + "NVIDIA FLARE" : "NVIDIA FLARE";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="NVIDIA FLAREâ„¢ (NVIDIA Federated Learning Application Runtime Environment) is a domain-agnostic, open-source, and extensible SDK for Federated Learning."
      canonical={canonicalURL}
    />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="node_modules/blaze-slider/dist/blaze.css"
    />
    <!-- <link rel="stylesheet" href="theme.css" /> -->
    <!-- Required Core Stylesheet -->
    <link rel="stylesheet" href="node_modules/@glidejs/glide/dist/css/glide.core.min.css">

    <!-- Optional Theme Stylesheet -->
    <link rel="stylesheet" href="node_modules/@glidejs/glide/dist/css/glide.theme.min.css">

    <link rel="stylesheet" href="node_modules/prismjs/themes/prism.css"/>

    <!-- <link rel="stylesheet" href="node_modules/prismjs/components/prism-python.min.css" data-noprefix=""> -->

    <link rel="stylesheet" href="node_modules/prismjs/plugins/line-highlight/prism-line-highlight.css" data-noprefix="">

    <link rel="stylesheet" href="node_modules/prismjs/plugins/line-numbers/prism-line-numbers.css" data-noprefix="">

  </head>
  <body>
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <script src="prismjs/prism.js"></script>
  </body>
</html>
